<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardElevation="4dp"
    card_view:contentPadding="5dp"
    tools:context=".ui.stationdetail.RainFragment">

    <ProgressBar
        android:id="@+id/rain_fragment_progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/weather_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <com.db.chart.view.BarChartView
                android:id="@+id/rain_bar_chart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bcbcbc"
            android:layout_marginTop="15dp">

            <!--<android.support.constraint.ConstraintLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->

                <!--<TextView-->
                    <!--android:text="test"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

                <!--<TextView-->
                    <!--android:text="test2"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->

            <!--</android.support.constraint.ConstraintLayout>-->

            <TableLayout
                android:id="@+id/rain_table_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow android:id="@+id/rain_table_value_row" />

                <TableRow android:id="@+id/rain_table_time_row" />

            </TableLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/data_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Sample data" />

    </LinearLayout>

</android.support.v7.widget.CardView>